<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.LoginActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    >


    <ImageView
        android:id="@+id/img_logo_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:transitionName="logo_img"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/catch_phrase_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Deserve Peace Of Mind"
        android:transitionName="app_name_logo"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#08470F"
        />

    <TextView
        android:id="@+id/sign_in_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In To Continue"
        android:transitionName="sign_in_text"
        android:textSize="18sp"
        android:textColor="#08470F"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="txt_trans"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Below is the Password Material-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwd"
            android:hint="Password"
            android:paddingTop="5dp"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="pwd"
                />



        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:id="@+id/forgot_pwd"
            android:background="#00000000"
            android:text="Forgot Password?"
            android:layout_gravity="right"
            android:textColor="#08470F"
            android:layout_margin="5dp"
            android:transitionName="forgot_pwd"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sign_in_btn"
            android:elevation="0dp"
            android:backgroundTint="#08470F"
            android:text="Sign In"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:transitionName="sign_in_btn"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:id="@+id/btn_reg"
            android:background="#00000000"
            android:text="Don't Have An Account? Sign Up"
            android:layout_gravity="right"
            android:transitionName="sign_up_btn_trans"
            android:textColor="#000"
            android:layout_margin="5dp"
            />

    </LinearLayout>



</LinearLayout>